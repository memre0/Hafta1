
<div class="container">
<h2 class="text-center mb-5 mt-4">Your Post</h2>
     <div class="row">
<% @posts.each do |post| %>
            <div class="card mr-3 mt-2" style="width: 18rem;">
                <img class="card-img-top" src="http://placehold.it/300x150" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= post.title %></h5>
                    <p class="card-text"><%= truncate(post.body, :length => 35) %></p>
                    <%= link_to "Read Post", post, :class => "btn btn-primary" %>
                </div>
            </div>
<% end %>   
         
    </div>
</div>
